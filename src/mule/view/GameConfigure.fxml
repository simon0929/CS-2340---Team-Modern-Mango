            <ChoiceBox fx:id="p1Race" disable="true" layoutX="355.0" layoutY="115.0" prefWidth="150.0" />
            <Label layoutX="390.0" layoutY="75.0" text="Choose Race" />
            <TextField fx:id="p2Name" disable="true" layoutX="22.0" layoutY="155.0" promptText="name" text="Player 2" />
            <ColorPicker fx:id="p2Color" disable="true" layoutX="228.0" layoutY="155.0" />
            <ChoiceBox fx:id="p2Race" disable="true" layoutX="355.0" layoutY="155.0" prefWidth="150.0" />
            <TextField fx:id="p3Name" disable="true" layoutX="22.0" layoutY="195.0" promptText="name" text="Player 3" />
