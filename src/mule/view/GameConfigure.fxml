                     </items>
                  </ContextMenu>
               </contextMenu>
            </ChoiceBox>
            <Label layoutX="22.0" layoutY="6.0" text="Number of Players" />
            <Label layoutX="61.0" layoutY="75.0" text="Choose Name" />
