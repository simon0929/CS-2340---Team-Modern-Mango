                  <ToggleGroup fx:id="mapType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton id="standardRadio" fx:id="standMap" layoutX="64.0" layoutY="329.0" mnemonicParsing="false" onAction="#enableStartButton" text="Standard" toggleGroup="$mapType" />
            <RadioButton id="tourRadio" fx:id="tourDiff" layoutX="292.0" layoutY="404.0" mnemonicParsing="false" onAction="#enableStartButton" text="Tournament">
               <toggleGroup>
                  <ToggleGroup fx:id="difficultyType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton id="standDifRadio" fx:id="standDiff" layoutX="176.0" layoutY="404.0" mnemonicParsing="false" onAction="#enableStartButton" text="Standard" toggleGroup="$difficultyType" />
            <RadioButton id="beginnerRadio" fx:id="beginDiff" layoutX="64.0" layoutY="404.0" mnemonicParsing="false" onAction="#enableStartButton" text="Beginner" toggleGroup="$difficultyType" />
            <Button fx:id="startGameButton" disable="true" layoutX="470.0" layoutY="440.0" mnemonicParsing="false" onAction="#handleStartGame" text="Start Game" />
         </children>
      </AnchorPane>
      <Label layoutX="188.0" layoutY="46.0" text="Select and Press Enter" />
      <Label layoutX="22.0" layoutY="388.0" text="Select Difficulty" />
   </children>
